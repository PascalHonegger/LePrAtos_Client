<UserControl x:Class="LePrAtos.Lobby.MemberRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:serviceReferences="clr-namespace:LePrAtos.Service_References"
             xmlns:properties="clr-namespace:LePrAtos.Properties"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance serviceReferences:PlayerViewModel}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Image Grid.Column="0" ToolTip="{x:Static properties:Strings.LobbyView_Owner}" Source="../Resources/Crown.png"
		       Visibility="{Binding IsLeader, Converter={StaticResource BoolToVis}}" />
		<TextBlock Grid.Column="1" Text="{Binding Username}" ToolTip="{x:Static properties:Strings.Username}" />
		<TextBlock Grid.Column="2" Text="✓" ToolTip="{x:Static properties:Strings.LobbyView_Ready}"
		           Visibility="{Binding IsReady, Converter={StaticResource BoolToVis}}" />
		<Button Grid.Column="3" Width="30" ToolTip="{x:Static properties:Strings.LobbyView_Remove}">
			<Image Source="../Resources/DeleteRed.png" />
		</Button>
	</Grid>
</UserControl>