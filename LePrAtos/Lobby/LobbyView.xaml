<Window x:Class="LePrAtos.Lobby.LobbyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LePrAtos.Lobby"
        xmlns:properties="clr-namespace:LePrAtos.Properties"
        xmlns:serviceReferences="clr-namespace:LePrAtos.Service_References"
        mc:Ignorable="d"
        Title="{Binding LobbyName}" d:DataContext="{d:DesignInstance local:LobbyViewModel}" WindowStartupLocation="CenterScreen" Closing="LobbyView_OnClosing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="6*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<ListView Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Members}" HorizontalAlignment="Stretch" Grid.RowSpan="2">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="Height" Value="75" />
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.View>
				<GridView>
					<GridViewColumn Header="{x:Static properties:Strings.LobbyView_Owner}" >
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="serviceReferences:PlayerViewModel">
								<Image Source="../Resources/Crown.png" Visibility="{Binding IsLeader, Converter={StaticResource BoolToVis}}"/>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="{x:Static properties:Strings.Username}" DisplayMemberBinding="{Binding Username}"/>
					<GridViewColumn Header="{x:Static properties:Strings.LobbyView_Remove}">
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="serviceReferences:PlayerViewModel">
								<Button Width="30">
									<Image Source="../Resources/DeleteRed.png" />
								</Button>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Header="{x:Static properties:Strings.LobbyView_Ready}" >
						<GridViewColumn.CellTemplate>
							<DataTemplate DataType="serviceReferences:PlayerViewModel">
								<TextBlock Text="✓" Visibility="{Binding IsReady, Converter={StaticResource BoolToVis}}"/>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<CheckBox Grid.Column="1" Grid.Row="1" Content="{x:Static properties:Strings.LobbyView_Ready}" IsEnabled="{Binding CurrentSession.Player.IsLeader, Converter={StaticResource InvertBool}}" VerticalAlignment="Center" IsChecked="{Binding CurrentSession.Player.IsReady}"/>
		<Button Grid.Column="1" Grid.Row="1" Content="{x:Static properties:Strings.LobbyView_StartGame}" Command="{Binding StartGameCommand}" Visibility="{Binding CurrentSession.Player.IsLeader, Converter={StaticResource BoolToVis}}" />
		<Button Grid.Column="2" Grid.Row="1" Content="{x:Static properties:Strings.LobbyView_LeaveLobby}" Command="{Binding LeaveLobbyCommand}"/>
		<Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.Resources>
				<Style TargetType="TextBox">
					<Setter Property="IsReadOnly" Value="{Binding CurrentSession.Player.IsLeader, Converter={StaticResource InvertBool}}"/>
				</Style>
				<Style TargetType="Button">
					<Setter Property="IsEnabled" Value="{Binding CurrentSession.Player.IsLeader, Converter={StaticResource InvertBool}}"/>
				</Style>
			</Grid.Resources>
			<TextBlock Text="Lobby Einstellungen" />
			<Label Grid.Row="1" Content="Neues Lobby Passwort" Target="{Binding ElementName=LobbyPassword}"/>
			<TextBox Grid.Row="2" Name="LobbyPassword" Text="{Binding NewLobbyPassword}"/>
			<Button Grid.Row="3" Content="Passwort setzen" Command="{Binding SetLobbyPasswordCommand}"/>
			<Label Grid.Row="4" Content="Neuer Lobby Name" Target="{Binding ElementName=LobbyName}"/>
			<TextBox Grid.Row="5" Name="LobbyName" Text="{Binding NewLobbyName}"/>
			<Button Grid.Row="6" Content="Lobby Name setzen" Command="{Binding SetLobbyNameCommand}"/>
		</Grid>
	</Grid>
</Window>