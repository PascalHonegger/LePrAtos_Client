<Window x:Class="LePrAtos.Startup.Login.ResetPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LePrAtos.Startup.Login"
        xmlns:properties="clr-namespace:LePrAtos.Properties"
        mc:Ignorable="d"
        Title="ResetPasswordView" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" d:DataContext="{d:DesignInstance local:ResetPasswordViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid Grid.Row="0" Grid.Column="0" IsEnabled="{Binding IsFirstStage}">
			
		</Grid>
		<Grid Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsFirstStage, Converter={StaticResource InvertBool}}">
			
		</Grid>
		<Grid Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="1" Content="{x:Static properties:Strings.Abort}" Click="CancelButton_OnClick"/>
		</Grid>
	</Grid>
</Window>