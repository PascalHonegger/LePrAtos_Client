<Window x:Class="LePrAtos.Startup.Login.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:login="clr-namespace:LePrAtos.Startup.Login"
        xmlns:localization="clr-namespace:LePrAtos.Properties"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="{x:Static localization:Strings.LoginView_Login}" MinHeight="300" MinWidth="500" Height="300" Width="500" d:DataContext="{d:DesignInstance login:LoginViewModel}" WindowStartupLocation="CenterScreen">

	<Grid Margin="5" DockPanel.Dock="Bottom" FocusManager.FocusedElement="{Binding ElementName=Username}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Label Grid.Row="0" Grid.Column="0" Content="{x:Static localization:Strings.LoginView_Language}" />
			<ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding PossibleLanguages}" SelectedItem="{Binding SelectedLanguage}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<Grid Height="20" HorizontalAlignment="Stretch">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Image Grid.Column="0" Source="{Binding PathToFlag}" Margin="0,0,5,0"/>
							<TextBlock Grid.Column="1" Text="{Binding DisplayText}"/>
						</Grid>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</Grid>
		<Label Grid.Column="0" Grid.Row="1" Target="{Binding ElementName=Username}"
		       Content="{x:Static localization:Strings.LoginView_UsernameOrMail}" VerticalAlignment="Center"/>
		<TextBox x:Name="Username" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" >
			<TextBox.Text>
				<Binding Path="Username" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay"/>
			</TextBox.Text>
		</TextBox>
		<Label Grid.Column="0" Grid.Row="2" Target="{Binding ElementName=Password}"
		       Content="{x:Static localization:Strings.Password}" VerticalAlignment="Center"/>
		<PasswordBox Name="Password" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" />
		<TextBlock Grid.Column="0" Grid.Row="4" TextAlignment="Center">
			<Hyperlink Command="{Binding RegisterCommand}"><TextBlock Text="{x:Static localization:Strings.LoginView_Register}"/></Hyperlink>
		</TextBlock>
		<CheckBox Grid.Column="1" Grid.Row="3" Content="{x:Static localization:Strings.LoginView_SaveLogin}" IsChecked="{Binding SaveLogin}"/>
		<Button Grid.Column="1" Grid.Row="4" Content="{x:Static localization:Strings.LoginView_Login}"
		        Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=Password, Path=Password}" IsDefault="True"/>
	</Grid>
</Window>