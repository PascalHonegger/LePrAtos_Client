<Window x:Class="LePrAtos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lePrAtos="clr-namespace:LePrAtos"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" d:DataContext="{d:DesignInstance lePrAtos:MainWindowViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBox Grid.Row="0" Text="{Binding Username}"/>
		<TextBox Grid.Row="1" Text="{Binding Password}"/>
		<Button Grid.Row="2" Content="Klick me!" Click="ButtonBase_OnClick"/>
		<TextBlock Grid.Row="3" Text="{Binding Output}"/>
	</Grid>
</Window>
